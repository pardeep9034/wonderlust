<%layout("/layout/boilerplate")-%>
<style>
  .filter-section{
    
    align-items: center;
    justify-content: space-evenly;

    
    
    
  }
  #filters{
    display: flex;
   flex-wrap: wrap;
   cursor: pointer;

    
  }
  .filter{
    margin-right: 2rem;
    text-align: center;
    font-size: .8rem;
    opacity: .7;

    
  }
  .filter:hover{
    opacity: 1;
  }
  #filterbtn{
    display: flex;
    font-size: 1rem;
    align-items: center;
    font-weight: 500;
    border: 2px solid black;
    border-radius: 15px;
    height: 2.5rem;
    padding: 1rem;

  }
  .tax-toggel{
    display: flex;
    align-items: center;
    justify-content: center;
padding: 0px 10px;
    
    font-size: 1rem;
    font-weight: 500;
    border: 2px solid black;
    border-radius: 15px;
    height: 2.5rem;
    
    

  }
  .tax{
    font-size: .8rem;
   
    
  }
</style>
<body>
  <div class="d-flex filter-section col-10 offset-1">
  <div id="filters" class=" mt-3">
    <div class="filter"><i class="fa-solid fa-fire"></i>
      <p>Trending</p></div>

    
    <div class="filter"><i class="fa-solid fa-mountain-city"></i><p>Iconic</p></div>
    
    <div class="filter"><i class="fa-solid fa-mountain"></i><p>Mountain</p></div>
    
    <div class="filter"><i class="fa-solid fa-chess-rook"></i> <p>Castel</p></div>
    <div class="filter"><i class="fa-solid fa-umbrella-beach"></i> <p>Beach</p></div>
    <div class="filter"><i class="fa-solid fa-city"></i> <p>City</p></div>
    <div class="filter"><i class="fa-regular fa-snowflake"></i> <p>snow</p></div>
   

  </div>
  <div id="filterbtn">filter &nbsp;<i class="fa-solid fa-bars"></i></div>
  <div class="tax-toggel">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
      <label class="form-check-label" for="flexSwitchCheckChecked">Display with tax</label>
    </div>
  </div>
 
  </div>

  

    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 " >
     
    <% for(listing of allListings){%>
        
        <div class="card listing-card" style="width: 22rem;" data-listingId=<%=listing._id%>>
            <img src="<%=listing.image.url%>" class="card-img-top" alt="..."   style="height: 18rem; width: 18rem;">
            <div class="card-body">
              <h5 class="card-title mt-2"><%=listing.title%></h5>
             
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">&#8377 <%=listing.price%> / Night <i class="tax">&nbsp; +18% Gst</i></li>
             
            </ul>
            
          </div>
       
   <% }%>
    </div>
   <script src="/js/show.js"></script>
   <script>
      const taxes = document.querySelectorAll('.tax');
      const taxToggel = document.querySelector('.form-check-input');
      taxToggel.addEventListener('click',()=>{
        console.log('clicked');
        for(tax of taxes){
          tax.classList.toggle('d-none');
        }

      })
   </script>
</body>
